<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class=""><%= f.label :email, class: "sr-only" %><br />
  <%= f.email_field :email, class: "form-control", :autofocus => true %></div>

  <div class=""><%= f.label :password, class: "sr-only" %><br />
  <%= f.password_field :password, class: "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
